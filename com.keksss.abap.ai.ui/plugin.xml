<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.keksss.abap.ai.ui.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.keksss.abap.ai.ui.preferences.AbapAiPreferencePage"
            id="com.keksss.abap.ai.ui.preferences.MainPage"
            name="ABAP AI Tools">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.keksss.abap.ai.ui.commands.category"
            id="com.keksss.abap.ai.ui.commands.analyzeWithAi"
            name="Analyze with AI">
      </command>
      <category
            id="com.keksss.abap.ai.ui.commands.category"
            name="ABAP AI Tools">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.keksss.abap.ai.ui.handlers.AnalyzeWithAiHandler"
            commandId="com.keksss.abap.ai.ui.commands.analyzeWithAi">
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.keksss.abap.ai.ui.handlers.AbapFeedEntryPropertyTester"
            id="com.keksss.abap.ai.ui.AbapFeedEntryPropertyTester"
            namespace="com.keksss.abap.ai.ui"
            properties="isAbapFeedEntry"
            type="java.lang.Object">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:com.sap.adt.feedreader.ui.FeedsView?after=additions">
         <command
               commandId="com.keksss.abap.ai.ui.commands.analyzeWithAi"
               label="Analyze with AI"
               style="push">
            <visibleWhen>
               <with variable="selection">
                  <iterate ifEmpty="false" operator="or">
                     <test property="com.keksss.abap.ai.ui.isAbapFeedEntry"/>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.keksss.abap.ai.ui"
            name="ABAP AI">
      </category>
      <view
            category="com.keksss.abap.ai.ui"
            class="com.keksss.abap.ai.ui.views.AbapAiResultView"
            id="com.keksss.abap.ai.ui.views.AbapAiResultView"
            name="AI Results">
      </view>
   </extension>


</plugin>
